<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/esm/popper.min.js"></script>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script> -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/CustomScripts/realtime.js"></script>

    @RenderSection("CustomScript", false)

</head>
<body>
    <div class="container" style="width:500px; margin:auto">
        <h2>Fire Detection Notifications</h2>
        <br />
        <ul class="nav nav-tabs">
            <li class="nav-item">
                @if (ViewBag.Title == "Index")
                {
                    <a class="nav-link active" href="@Url.Action("Index","Home")">Home</a>
                }
                else
                {
                    <a class="nav-link" href="@Url.Action("Index","Home")">Home</a>
                }
            </li>
            <li class="nav-item">
                @if (ViewBag.Title == "Archive")
                {
                    <a class="nav-link active" href="@Url.Action("Archive","Home")">Archive</a>
                }
                else
                {
                    <a class="nav-link" href="@Url.Action("Archive","Home")">Archive</a>
                }
            </li>
        </ul> 
    </div>
    @RenderBody()
</body>
</html>
